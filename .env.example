# Smart Campus Guide Environment Configuration
# Copy this file to .env and update the values

# OpenAI Configuration (Required)
OPENAI_RAG_MODEL_API_KEY=your_openai_api_key_here
OPENAI_RAG_MODEL=gpt-4o
OPENAI_RAG_MODEL_API_BASE=https://api.openai.com/v1
OPENAI_MAX_RETRIES=3

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=colleges_rag
CHROMA_PERSIST_DIRECTORY=/Users/yourusername/.chromadb_autogen

# RAG System Configuration
RAG_K=3
RAG_SCORE_THRESHOLD=0.2
RAG_CHUNK_SIZE=1500

# Embedding Model Configuration
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Data Configuration
COLLEGE_CSV_PATH=college_dataset.csv

# Application Configuration
LOG_LEVEL=INFO
